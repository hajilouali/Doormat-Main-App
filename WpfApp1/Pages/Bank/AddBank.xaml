<telerik:RadWindow x:Class="WpfApp1.Pages.Bank.AddBank"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="AddBank" Height="150" Width="300" FlowDirection="RightToLeft" FontFamily="/WpfApp1;component/Content/Fonts/#IRANSans" Loaded="RadWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Margin="15" Name="txttitle" VerticalContentAlignment="Center"></TextBox>
        <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button IsDefault="True" Height="35"  x:Name="btnok" Margin="2" Background="{x:Null}" BorderBrush="#FFC7C7C7" Click="btnok_Click">
                <Image Source="/WpfApp1;component/Content/Icons/Crud/ok.png" />
            </Button>
            <Button IsCancel="True" Height="35"  x:Name="btncancel" Margin="2" Background="{x:Null}" BorderBrush="#FFC7C7C7" Click="btncancel_Click">
                <Image Source="/WpfApp1;component/Content/Icons/Crud/cancel--v1.png" />
            </Button>
        </WrapPanel>
        
    </Grid>
</telerik:RadWindow>
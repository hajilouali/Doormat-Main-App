<telerik:RadWindow x:Class="WpfApp1.Pages.Users.setPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="setPassword"  Width="300" FlowDirection="RightToLeft" WindowStartupLocation="CenterOwner" FontFamily="/WpfApp1;component/Content/Fonts/#IRANSans" 
         ResizeMode="NoResize"       >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>رمز عبور جدید :</Label>
        <telerik:RadPasswordBox Name="newpassword" Grid.Row="0" Grid.Column="1" Margin="3"></telerik:RadPasswordBox>
        <Button x:Name="btnok" Grid.Row="1" Grid.ColumnSpan="2" Click="btnok_Click">ذخیره</Button>
    </Grid>
</telerik:RadWindow>
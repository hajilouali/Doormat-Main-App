<telerik:RadWindow x:Class="WpfApp1.Pages.Users.Rolls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="نقش ها " Height="300" Width="350" FlowDirection="RightToLeft" WindowStartupLocation="CenterOwner" FontFamily="/WpfApp1;component/Content/Fonts/#IRANSans" 
         ResizeMode="NoResize"       >
    <Grid>
        <telerik:RadGridView x:Name="grdroll" AutoGenerateColumns="False" ShowGroupPanel="False" IsReadOnly="True" MouseDoubleClick="grdroll_MouseDoubleClick">
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding name}"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding description}" Width="*"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
    </Grid>
</telerik:RadWindow>
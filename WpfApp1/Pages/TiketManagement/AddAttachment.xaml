<telerik:RadWindow x:Class="Doormat.Pages.TiketManagement.AddAttachment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="افزودن فایل پیسوت"  Width="500"
                   WindowStartupLocation="CenterOwner"  FlowDirection="RightToLeft" FontFamily="/WpfApp1;component/Content/Fonts/#IRANSans"  ResizeMode="NoResize"  
                >
    <Grid>
        <Grid  Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0">ارسال فایل پیوست</Label>
            <telerik:RadFilePathPicker Grid.Row="1" AllowDrop="True" WatermarkContent="انتخاب فایل" Name="filepiker"/>
            <Button Grid.Row="2" Margin="0 3 0 3" Name="btnUpload" Click="btnUpload_Click">ارسال فایل</Button>
        </Grid>
    </Grid>
</telerik:RadWindow>
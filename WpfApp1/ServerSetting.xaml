<telerik:RadWindow x:Class="WpfApp1.ServerSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="تنظیمات آدرس سرور"  Width="300" FlowDirection="RightToLeft" WindowStartupLocation="CenterOwner" FontFamily="/WpfApp1;component/Content/Fonts/#IRANSans"
          ResizeMode="NoResize"      >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="2">
            <Button Name="btnok" Click="btnok_Click" Background="{x:Null}" BorderBrush="{x:Null}">
                <Image Source="Content/Icons/Crud/ok.png"/>
            </Button>
        </WrapPanel>
        <Label>آدرس سرور :</Label>
        <TextBox Grid.Row="1" HorizontalContentAlignment="Right" Margin="3" Name="txtserver"></TextBox>
    </Grid>
</telerik:RadWindow>